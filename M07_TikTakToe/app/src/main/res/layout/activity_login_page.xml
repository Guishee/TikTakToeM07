<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage">

    <LinearLayout
        android:id="@+id/topSpace"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:orientation="vertical">

    </LinearLayout>
    <ImageView
        android:id="@+id/LogoApp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/topSpace"
        android:src="@drawable/ttt"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/botonLogin"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/LogoApp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/ssgoogle" />
    <ImageButton
        android:id="@+id/botonLoginFace"
        android:layout_width="325dp"
        android:layout_height="60dp"
        android:layout_below="@+id/botonLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ssfaceb"
        android:scaleType="centerCrop"
        android:background="@color/white"/>

</RelativeLayout>