<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuPage">

    <LinearLayout
        android:id="@+id/topSpace"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:orientation="vertical">

    </LinearLayout>
    <ImageView
        android:id="@+id/LogoApp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/topSpace"
        android:src="@drawable/ttt"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:id="@+id/izq"
        android:layout_width="205dp"
        android:layout_height="100dp"
        android:layout_below="@+id/LogoApp"
        android:layout_marginTop="53dp">
        <ImageButton
            android:id="@+id/botonPlay"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/jugar"
            android:scaleType="centerCrop"
            android:background="@color/white"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/drch"
        android:layout_width="205dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/izq"
        android:layout_below="@id/LogoApp"
        android:layout_marginTop="50dp">

        <ImageButton
            android:id="@+id/botonPerfil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/logoperfil" />

    </RelativeLayout>




</RelativeLayout>